<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/one_hundred_fourty_dip"
    android:id="@+id/cardview_myreviews"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="@dimen/ten_dip"
    android:layout_marginLeft="@dimen/ten_dip"
    android:layout_marginRight="@dimen/ten_dip"
    app:cardBackgroundColor="@color/white"
    android:gravity="center">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/ten_dip"
                >

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="@dimen/one_hundred_twenty_dip"
                    android:layout_height="@dimen/one_hundred_twenty_dip"
                    android:scaleType="fitStart"
                    android:layout_marginLeft="@dimen/ten_dip"
                    android:src="@drawable/demo_review_pic" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1.9"
                android:layout_marginTop="@dimen/ten_dip"
                >



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/five_dip"
                        android:layout_height="wrap_content">

                        <io.techery.properratingbar.ProperRatingBar
                            android:id="@+id/lowerRatingBar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:layout_marginLeft="@dimen/five_dip"
                            app:prb_defaultRating="4"
                            android:layout_gravity="center_vertical"
                            app:prb_tickNormalDrawable="@mipmap/star_blank"
                            app:prb_tickSelectedDrawable="@mipmap/star_icon_full"
                            android:layout_toRightOf="@+id/profile_image"
                            app:prb_totalTicks="5"
                            app:prb_clickable="true"
                            android:layout_below="@+id/month_txt"
                            app:prb_tickSpacing="1dp"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.2"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Everfine Diamond Fairness Massage Gel"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:id="@+id/textView14" />


                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="@dimen/five_dip"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="RS 656 "
                            android:textStyle="bold"
                            android:id="@+id/textView32" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/five_dip"
                        >

                        <RelativeLayout
                            android:layout_width="@dimen/twenty_five_dip"
                            android:layout_height="@dimen/twenty_five_dip"
                            android:background="@drawable/increament_quantity"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:textColor="#7B7B7B"
                                  />

                        </RelativeLayout>


                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textColor="#7B7B7B"
                            android:background="@android:color/transparent"
                            android:layout_marginLeft="@dimen/five_dip"
                            android:layout_marginRight="@dimen/five_dip"
                            />

                        <RelativeLayout
                            android:layout_width="@dimen/twenty_five_dip"
                            android:layout_height="@dimen/twenty_five_dip"
                            android:background="@drawable/increament_quantity"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:textColor="#7B7B7B"
                                  />

                        </RelativeLayout>



                    </LinearLayout>




                </LinearLayout>




            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_marginTop="@dimen/five_dip"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="@dimen/twenty_five_dip"
                    android:layout_height="@dimen/twenty_five_dip"
                    android:src="@drawable/ic_close_red"
                    android:layout_alignParentRight="true"
                    />

                <CheckBox
                    android:layout_width="@dimen/twenty_five_dip"
                    android:layout_height="@dimen/twenty_five_dip"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/red"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/three_dip"
                    />


            </RelativeLayout>




        </LinearLayout>



    </LinearLayout>
</android.support.v7.widget.CardView>